<section class="row">
  <h1>{{ title }}</h1>
  {% if thumbnail %}
  <div style="max-width: 720px; margin: 16px 0;">
    <img src="{{ thumbnail }}" alt="{{ title }}" style="width:100%; border-radius:16px;">
  </div>
  {% endif %}
  {% if youtube %}
  <p><a class="play" href="{{ youtube }}" target="_blank" rel="noopener">â–¶ Watch Sermon</a></p>
  {% endif %}
  <div style="margin-top: 16px; color: #ddd;">
    {{ content | safe }}
  </div>
</section>
{% endblock %}
